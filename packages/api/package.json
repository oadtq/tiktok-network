  "dependencies": {
    "@everylab/auth": "workspace:*",
    "@everylab/db": "workspace:*",
    "@everylab/storage": "workspace:*",
    "@everylab/validators": "workspace:*",
    "@trpc/server": "catalog:",
    "superjson": "2.2.3",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@everylab/eslint-config": "workspace:*",
    "@everylab/prettier-config": "workspace:*",
    "@everylab/tsconfig": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@everylab/prettier-config"
}
